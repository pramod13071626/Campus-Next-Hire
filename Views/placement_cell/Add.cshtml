@model CampusCraft.Models.company
@{
    ViewBag.Title = "Add";
}

<h2 class="form-title text-center">Add Company</h2>

<div class="container d-flex justify-content-center">
    <div class="form-container p-4">
        @using (Html.BeginForm("Add", "Placement_Cell", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.cmpname, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.cmpname, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.cmpname, "", new { @class = "error-message" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.location, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.location, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.location, "", new { @class = "error-message" })
            </div>
            <div class="form-group mb-3">
                @Html.LabelFor(m => m.job_requirements, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.job_requirements, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.job_requirements, "", new { @class = "error-message" })
            </div>
            <div class="form-group mb-4">
                @Html.LabelFor(m => m.job_description, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.job_description, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(m => m.job_description, "", new { @class = "error-message" })
            </div>
            <button type="submit" class="btn btn-primary w-100">Add Company</button>
        }
    </div>
</div>

<style>
    body {
        font-family: 'Arial', sans-serif;
        /*        background: url('background-image.jpg') no-repeat center center fixed;*/
        /*        background-size: cover;*/
        /*                  background-color:linear-gradient(135deg, #74ebd5, #acb6e5);*/
        background: linear-gradient(135deg, #74ebd5, #acb6e5);
        color: #333;
    }

    .form-title {
        font-size: 2rem;
        margin-top: 20px;
        font-weight: bold;
        color: #fff;
        text-shadow: 2px 2px 5px rgba(0, 0, 0, 0.3);
    }

    .form-container {
        background: rgba(255, 255, 255, 0.9);
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        max-width: 500px;
        width: 100%;
    }

    .form-label {
        font-weight: bold;
        color: #555;
    }

    .form-control {
        border-radius: 5px;
        transition: all 0.3s ease-in-out;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0px 0px 5px rgba(0, 123, 255, 0.5);
        }

    .error-message {
        color: red;
        font-size: 0.875rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
        font-size: 1rem;
        font-weight: bold;
        padding: 10px;
        border-radius: 5px;
        transition: background 0.3s;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }
</style>