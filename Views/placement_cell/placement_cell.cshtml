@{
    ViewBag.Title = "placement_cell";
}

<h2>placement_cell</h2>

@if (ViewBag.Message != null)
{
    <div>@ViewBag.Message</div>
}

@using (Html.BeginForm("AddCompany", "Placement_Cell", FormMethod.Post, new { @class = "add-company-form" }))
{
    <h2>Add Company</h2>
    <div>
        <label for="cmpname">Company Name:</label>
        <input type="text" id="cmpname" name="cmpname" required />
    </div>
    <div>
        <label for="location">Location:</label>
        <input type="text" id="location" name="location" required />
    </div>
    <div>
        <label for="job_requirements">Job Requirements:</label>
        <input type="number" id="job_requirements" name="job_requirements" required />
    </div>
    <div>
        <label for="job_description">Job Description:</label>
        <textarea id="job_description" name="job_description" required></textarea>
    </div>
    <button type="submit">Add Company</button>
}