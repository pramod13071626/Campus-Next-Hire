@using CampusCraft.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<main aria-labelledby="title">
    <div class="container py-5">
        <h2 id="title" class="text-center text-light mb-4">@ViewBag.Title</h2>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <section id="loginForm" class="card p-4 shadow-lg custom-card">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <h4 class="text-center text-light mb-3">Use a local account to log in.</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Email, new { @class = "form-label custom-label" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control custom-input" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4">
                            @Html.LabelFor(m => m.Password, new { @class = "form-label custom-label" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control custom-input" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-4 form-check">
                            @Html.CheckBoxFor(m => m.RememberMe, new { @class = "form-check-input custom-checkbox" })
                            @Html.LabelFor(m => m.RememberMe, new { @class = "form-check-label custom-label" })
                        </div>

                        <div class="d-grid gap-2">
                            <input type="submit" value="Log in" class="btn btn-primary btn-lg custom-btn" />
                        </div>

                        <div class="text-center mt-3">
                            <p>
                                @Html.ActionLink("Register as a new user", "Register", new { @class = "custom-link" })
                            </p>
                        </div>
                    }
                </section>
            </div>
        </div>
    </div>
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<style>
    /* Body Styling with dark theme */
    body {
        background: linear-gradient(to right, #2c3e50, #34495e); /* Dark gradient background */
        font-family: 'Arial', sans-serif;
        color: #ecf0f1; /* Light text color */
    }

    /* Container with responsive layout */
    .container {
        max-width: 1000px;
        margin-top: 50px;
    }

    /* Card with dark theme and hover effects */
    .custom-card {
        background-color: #34495e; /* Dark card background */
        border-radius: 10px;
        border: none;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .custom-card:hover {
            background-color: #2c3e50; /* Slightly darker shade on hover */
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
        }

    /* Label Styling */
    .custom-label {
        font-weight: bold;
        font-size: 1.1rem;
        color: #ecf0f1; /* Light label text color */
    }

    /* Input fields with dark theme */
    .custom-input {
        border-radius: 8px;
        padding: 12px;
        font-size: 1rem;
        background-color: #2c3e50;
        color: #ecf0f1; /* Light text color for inputs */
        border: 1px solid #7f8c8d; /* Dark border */
        transition: background-color 0.3s ease;
    }

        .custom-input:hover {
            background-color: #34495e;
            border-color: #1abc9c; /* Highlight border on hover */
        }

    /* Checkbox Styling */
    .custom-checkbox {
        transform: scale(1.2);
    }

    /* Button Styling with hover effects */
    .custom-btn {
        background-color: #1abc9c;
        color: #fff;
        border-radius: 25px;
        font-weight: bold;
        padding: 10px 20px;
        font-size: 1.1rem;
        transition: background-color 0.3s ease, transform 0.3s ease;
    }

        .custom-btn:hover {
            background-color: #16a085;
            transform: scale(1.05);
        }

    /* Link Styling */
    .custom-link {
        color: #1abc9c;
        font-size: 1rem;
    }

        .custom-link:hover {
            color: #16a085;
            text-decoration: underline;
        }

    /* Text Centering */
    .text-center {
        text-align: center;
    }

    /* Responsive grid layout */
    .d-grid {
        display: grid;
        gap: 1rem;
    }
</style>